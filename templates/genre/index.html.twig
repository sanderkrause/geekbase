{% extends 'base.html.twig' %}

{% block content %}

    <h1 class="h3 mb-2 text-gray-800">Genres</h1>

    {% if app.user %}
        <div class="row">
            {# Start row #}
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1"># of genres in
                                    your collection
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">{{ userGenres|length }}</div>
                            </div>
                            <div class="col-auto">
                                <i class="fa fa-object-group fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total genres</div>
                                <div class="row no-gutters align-items-center">
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{ genres|length }}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# End row #}
        </div>
        <h1 class="h3 mb-2 text-gray-800">All genres</h1>
    {% endif %}

    <div class="row">
        {# Start row #}
        {% for genre in genres %}
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="h5 mb-0 font-weight-bold text-secondary">{{ genre.name }}</div>
                            </div>
                            <div class="col-auto">
                                {{ genre.games|length }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        {# End row #}
    </div>

{% endblock %}
